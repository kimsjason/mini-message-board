extends layout

block content
  h1= title
  p Welcome to #{title}
  a(class="new-message" href="/new") Add a New Message
  div(class="messages")
    each message in messages
      div(class="message")
        p(class="user") #{message.user}
        p(class="text") #{message.text}
        p(class="timestamp") #{message.added}
